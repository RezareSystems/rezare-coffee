<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="SHORTCUT ICON" href="~/Content/img/favicon.ico" />

</head>
<body @if (ViewBag.ShowNav == null || ViewBag.ShowNav) { @: style="padding-top: 50px;"
       } >
@if (ViewBag.ShowNav == null || ViewBag.ShowNav)
    {
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li></li>
                </ul>
            </div>
        </div>
    </div>
    }
    <div class="container body-content">
        @RenderBody()
        <p/>
        <footer>
            @if (Session["Guid"] != null)
            {
                @Html.ActionLink("Log Out", "LogOut", "Home")
            }
            <p>&copy; @DateTime.Now.Year - <a href="//rezare.co.nz/">Rezare Systems</a> | @Html.ActionLink("Credits", "Credits")</p>
            <img class="footer_logo" src="~/Content/img/RezareLogo.png" alt="Rezare Logo" />
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("https://code.jquery.com/ui/1.12.1/jquery-ui.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
