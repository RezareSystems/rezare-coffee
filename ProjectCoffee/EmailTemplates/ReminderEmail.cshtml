@model ProjectCoffee.Models.DatabaseModels.Reminder
<!DOCTYPE html>
<html>
<head>
    <title>ProjectCoffee</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <style>
        body {
            padding-top: 2em;
            background-color: whitesmoke;
        }

        .container-- {
            padding-bottom: 20px;
            font-family: Arial;
            padding: 2em;
            max-width: 50em;
        }

        /* Set padding to keep content from hitting the edges */
        .body-content {
            padding-left: 15px;
            padding-right: 15px;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #873a00;
        }

        a {
            color: inherit;
            text-decoration: none;
        }

            a:hover {
                color: inherit;
                text-decoration: underline;
            }

        .button {
            border: 1px solid #873a00;
            background-color: #873a00;
            border-radius: 3px;
            color: whitesmoke;
            padding: 5px;
            text-align: center;
        }
        .button a{
            background-color: #873a00;
            color: whitesmoke;
        }

        .center {
            text-align: center;
        }

        h5 a{
            color: #873a00;
        }
    </style>
</head>
<body>
    <div class="container--">
        <h1>@Model.User.FirstName, are you going to be at the next team meeting?</h1>
        <p>
            At the last meeting you wanted a coffee because you were going to be here after 9:30am (when the coffee's are ordered). <br>
            If that's the case for the next meeting (@ViewBag.NextMeeting) then click the button below.<br>
            <br>
            If you're going to be logged in by 9:30am, you don't need to do anything <span class="glyphicon glyphicon-thumbs-up"></span>
        </p>
        <br>
        <div class="center">
            <span class="button">
                <a href="https://coffee.rezare.co.nz/Home/ReminderConfirm?reminderId=@Model.Id.ToString()">Click here if you're going arrive after 9:30am</a>
            </span>
        </div>
        <br>
        <h5>
            Thanks!<br>
            <a href="https://coffee.rezare.co.nz/">coffee.rezare.co.nz</a>
        </h5>
    </div>

</body>
</html>

